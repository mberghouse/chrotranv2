#Description:

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
      OPTIONS
        SOLUTE SALT
      /
    /
  /
END

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW

  NEWTON_SOLVER
    USE_INFINITY_NORM_CONVERGENCE
    PRES_ABS_UPDATE_INF_TOL 1.d-4
    PRES_REL_UPDATE_INF_TOL 1.d-8
    SAT_ABS_UPDATE_INF_TOL 1.d-7 ! default 1.d-5
    SAT_REL_UPDATE_INF_TOL 1.D-5 ! default 1.d-
    # MAXIMUM_NUMBER_OF_ITERATIONS 50
    # RTOL 1.d-8
    # ATOL 1.d-8
    # STOL 1.d-30
  /

END

#=========================== regression =======================================
REGRESSION
  CELL_IDS
    1
    2
  /
END

#=========================== flow mode ========================================

#=========================== debug settings ===================================
#USE_TOUCH_OPTIONS

#DEBUG
#MATVIEW_JACOBIAN
#VECVIEW_RESIDUAL
#VECVIEW_SOLUTION
#/

#=========================== time stepper options =============================

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 10 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    10.d0 1.d0 1.d0
  /
/

#=========================== solver options ===================================


#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
  SALT_DIFFUSION_COEFFICIENT 1.d-9
/

#=========================== material properties ==============================
MATERIAL_PROPERTY soil
  ID 1
  SOLUBLE
  CHARACTERISTIC_CURVES cc1
  POROSITY 0.30
  TORTUOSITY 0.5
  ROCK_DENSITY 2650.d-3 kg/L
  THERMAL_CONDUCTIVITY_DRY 0.5d-6 MW/m-C
  THERMAL_CONDUCTIVITY_WET 2.d-6 MW/m-C
  HEAT_CAPACITY 830.d-6 MJ/kg-C
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
/

#=========================== saturation functions =============================
CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.2d0
    ALPHA 1.d-4
    M 0.5d0
    MAX_CAPILLARY_PRESSURE 1.d6
  /
  PERMEABILITY_FUNCTION MUALEM
    PHASE LIQUID
    LIQUID_RESIDUAL_SATURATION 0.2d0
    M 0.5d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    PHASE GAS
    LIQUID_RESIDUAL_SATURATION 0.2d0
    GAS_RESIDUAL_SATURATION 0.1d0
    M 0.5d0
  /
/

#=========================== output options ===================================
OUTPUT
  #PERIODIC TIME 0.1 y
 SCREEN PERIODIC 20 
#  PERIODIC_OBSERVATION TIMESTEP 1
  FORMAT HDF5
#  VELOCITY_AT_CENTER
  VARIABLES
     LIQUID_PRESSURE
     GAS_SATURATION
     LIQUID_MOBILITY
     GAS_MOBILITY
     POROSITY
     TEMPERATURE
     LIQUID_MOLE_FRACTIONS
     GAS_MOLE_FRACTIONS
     PRECIPITATE_SATURATION
  /
/

#=========================== times ============================================
TIME
  FINAL_TIME 1.d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 s
  MAXIMUM_TIMESTEP_SIZE 0.1d0 y
/

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
/

REGION west
  FACE WEST
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
/

REGION east
  FACE EAST
  COORDINATES
    10.d0 0.d0 0.d0
    10.d0 1.d0 1.d0
  /
/

REGION middle
  COORDINATE 5.d0 0.5d0 0.5d0
/

#=========================== observation points ===============================
OBSERVATION 
#  REGION middle
  REGION east
  VELOCITY
/

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    GAS_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
    SALT_MOLE_FRACTION AT_SOLUBILITY
    !POROSITY DIRICHLET
    TEMPERATURE DIRICHLET
  /
  GAS_PRESSURE 2.D5
  !POROSITY 3.D-1
  SALT_MOLE_FRACTION 1.D0
  GAS_SATURATION 7.d-1
  TEMPERATURE 20.D0
/


FLOW_CONDITION right
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
    TEMPERATURE DIRICHLET
  /
  LIQUID_FLUX 0.d0 m/y
  GAS_FLUX 0.d0 m/y
  TEMPERATURE 5.D0
/

FLOW_CONDITION left
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
    TEMPERATURE DIRICHLET
  /
  LIQUID_FLUX 0.d0 m/yr
  GAS_FLUX 0.D0 m/s
  TEMPERATURE 85.D0
/

#=========================== condition couplers ===============================
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
/

BOUNDARY_CONDITION west
#SOURCE_SINK west
  FLOW_CONDITION left
  REGION west
/

BOUNDARY_CONDITION east
  FLOW_CONDITION right
  REGION east
/

#=========================== stratigraphy couplers ============================
STRATA
  MATERIAL soil
  REGION all
/

END_SUBSURFACE
